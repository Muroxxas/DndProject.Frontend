@model DnDProject.Entities.Character.ViewModels.PartialViewModels.Components.ClassRowCM

<div class="form-row">
    @Html.Hidden($"Model.PrimaryTab.Classes.SelectedClasses[{Model.Index}].Index",Model.Index)
    <div class="form-group">
        @Html.Label($"Model.PrimaryTab.Classes.SelectClasses[{Model.Index}].Level","Level",new { @class="form-label"})
        @Html.TextBox($"Model.PrimaryTab.Classes.SelectedClasses[{Model.Index}].Level",Model.Level,new { @class="form-input", @type ="number"})
    </div>
    <div class="form-group">
        @Html.Label($"Model.PrimaryTab.Classes.SelectClasses[{Model.Index}].RemainingHitDice", "Hit Dice", new { @class = "form-label" })
        @Html.TextBox($"Model.PrimaryTab.Classes.SelectedClasses[{Model.Index}].RemainingHitDice", Model.RemainingHitDice, new { @class = "form-input", @type = "number" })
    </div>
    <div class="form-group">
        @Html.Label($"Model.PrimaryTab.Classes.SelectClasses[{Model.Index}].SelectedClass_id", "Class", new { @class = "form-label" })
        @Html.DropDownListFor(Model => Model.SelectedClass_id, new SelectList(Model.playableClasses,"Class_id","Name"),"Class", new { @class ="form-input"})
    </div>
    <div class="form-group">
        @if (Model.SelectedClass_id == null)
        {
            @Html.Label($"Model.PrimaryTab.Classes.SelectClasses[{Model.Index}].SelectedSubclass_id", "Subclass", new { @class = "form-label" })
            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="You must select a class before selecting a subclass">
                @Html.DropDownList("disabled", null, new { @disabled = "disabled" })
            </span>
        }
        else
        {
            @Html.Label($"Model.PrimaryTab.Classes.SelectClasses[{Model.Index}].SelectedSubclass_id", "Subclass", new { @class = "form-label" })
            @Html.DropDownListFor(Model => Model.SelectedSubclass_id, new SelectList(Model.subclasses,"Subclass_id", "Name", "Subclass", new { @class = "form-input"}))
        }
    </div>
    <div class="form-group">
        <button class="btn btn-danger removeClassRowCVButton">Forget</button>
    </div>

</div>
