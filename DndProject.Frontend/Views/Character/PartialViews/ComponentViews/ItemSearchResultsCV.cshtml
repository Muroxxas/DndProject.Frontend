@model PagedList.IPagedList<DnDProject.Entities.Character.ViewModels.PartialViewModels.Components.foundItemCM>
@using PagedList.Mvc;

@if (Model.Count == 0)
{
    <p>
        Oh dear! it seems there were no items with that result.
    </p>
}
else
{
    for (int i = 0; i < Model.Count; i++)
    {
        @Html.Partial("~/Views/Character/PartialViews/ComponentViews/FoundItemRowCV.cshtml", Model[i])
    }

<p>
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("SearchItems",
        new { page, currentFilter = ViewBag.CurrentFilter, getItemsBy = ViewBag.currentGetItemsBy  } ) )
</p>

    
}
