@model DnDProject.Entities.Character.ViewModels.CharacterVM 
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/Content/Custom/Character/CharacterForm.css" />

</head>


<body>
    <ul class="nav nav-tabs" id="characterTabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="primary-tab" data-toggle="tab" href="#primary" role="tab" aria-controls="primary" aria-selected="true">Primary</a>
        </li>
        <li>
            <a class="nav-link" id="inventory-tab" data-toggle="tab" href="#inventory" role="tab" aria-controls="inventory" aria-selected="false">Inventory</a>
        </li>
        <li>
            <a class="nav-link" id="spells-tab" data-toggle="tab" href="#spells" role="tab" aria-controls="spells" aria-selected="false">Spells</a>
        </li>
        <li>
            <a class="nav-link" id="notes-tab" data-toggle="tab" href="#notes" role="tab" aria-controls="notes" aria-selected="false">Notes</a>
        </li>
    </ul>

    <div class="tab-content" id="characterTabContent">
        <div class="tab-pane fade show active" id="primary" role="tabpanel" aria-labelledby="primary-tab">
            @Html.Partial("~/Views/Character/PartialViews/PrimaryTab.cshtml",Model.PrimaryTab)
        </div>
        <div class="tab-pane fade" id="inventory" role="tabpanel" aria-labelledby="inventory-tab">
            @Html.Partial("~/Views/Character/PartialViews/InventoryTab.cshtml",Model.InventoryTab)
        </div>
        <div class="tab-pane fade" id="spells" role="tabpanel" aria-labelledby="spells-tab">
           @Html.Partial("~/Views/Character/PartialViews/SpellsTab.cshtml",Model.SpellsTab)
        </div>
        <div class="tab-pane fade" id="notes" role="tabpanel" aria-labelledby="notes-tab">
            @Html.Partial("~/Views/Character/PartialViews/NotesTab.cshtml",Model.NotesTab)
        </div> 
    </div>


    @Html.Partial("~/Views/Character/PartialViews/ItemSearchPV.cshtml")
    @Html.Partial("~/Views/Character/PartialViews/SpellSearchPV.cshtml")
</body>
